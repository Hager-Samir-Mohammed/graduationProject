<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/custom_notification_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/ic_baseline_notifications_24" />

    <TextView
        android:id="@+id/custom_notification_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/custom_notification_iv"
        android:layout_toRightOf="@id/custom_notification_iv"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:padding="2dp"
        android:layout_marginStart="-15dp"
        android:layout_marginBottom="-15dp"
        android:background="@drawable/custom_notification_shape"
        android:text="10" />
</RelativeLayout>