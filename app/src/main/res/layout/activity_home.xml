<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    >

    <include layout="@layout/toolbar"
        android:id="@+id/home_toolBar"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelVisibilityMode="auto"
        android:background="@drawable/nav_background"
        app:itemIconTint="@color/purple_200"
        app:itemTextColor="@color/beige"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/bottom_nav" />

    <include layout="@layout/toolbar"
        android:id="@+id/home_toolBar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RV_1"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="170dp">

            </androidx.recyclerview.widget.RecyclerView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TV_1"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="2dp"
                    android:text="الإصدارات المجانية"
                    android:textSize="20dp"
                    android:background="@drawable/border_text"
                    android:textStyle="bold"
                    android:textColor="#100c08"
                    android:layout_marginStart="10dp"/>

                <!--                <EditText-->
                <!--                    android:id="@+id/editTextTextPersonName"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:inputType="textUri"-->
                <!--                    android:text="المزيد"-->
                <!--                    android:textStyle="bold"-->
                <!--                    android:textColor="#100c08"-->
                <!--                    android:paddingEnd="2dp"/>-->


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RV_2"
                android:layout_alignParentStart = "true"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/cardview_default_radius" />

            <TextView
                android:id="@+id/TV_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الكتب الأكثر مبيعاً"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#100c08"
                android:background="@drawable/border_text"
                android:layout_marginStart="10dp"
                android:layout_alignParentStart = "true"
                android:layout_marginBottom="@dimen/cardview_default_radius" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RV_3"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/cardview_default_radius"/>

            <TextView
                android:id="@+id/TV_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#100c08"
                android:background="@drawable/border_text"
                android:layout_marginStart="10dp"
                android:text="آخر ما نزل"
                android:layout_marginBottom="@dimen/cardview_default_radius"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RV_4"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart = "true"
                android:layout_marginBottom="@dimen/cardview_default_radius"/>

            <TextView
                android:id="@+id/TV_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="@drawable/border_text"
                android:textColor="#100c08"
                android:layout_marginStart="10dp"
                android:text="ترشيحات"
                android:layout_marginBottom="@dimen/cardview_default_radius"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RV_5"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart = "true"
                android:layout_marginBottom="@dimen/cardview_default_radius"/>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>